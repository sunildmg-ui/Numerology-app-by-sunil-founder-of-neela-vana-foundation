            </div>

            {/* Name, Mobile & Spouse Influence Analysis */}
            {(results.nameNum || results.mobileNum || results.overlays.spouse.length > 0) && (
              <div className="bg-white rounded-2xl shadow-xl p-6">
                <h2 className="text-2xl font-bold text-blue-700 mb-4">How Name, Mobile & Spouse Influence Your Life</h2>

                {/* Name Analysis */}
                {results.overlays.name && (
                  <div className="bg-blue-50 border-l-4 border-blue-500 p-5 rounded-lg mb-4">
